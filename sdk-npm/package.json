{
  "name": "gasflow-sdk",
  "version": "0.7.4",
  "description": "Universal Cross-Chain Gas Payment SDK powered by Circle CCTP V2 and Paymaster",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc || true",
    "dev": "bunx tsc --watch",
    "test": "jest",
    "test:testnet": "jest --config jest.testnet.config.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typechain": "typechain --target ethers-v5 --out-dir src/contracts/types src/contracts/abis/*.json",
    "verify-cctp-addresses": "node -e \"const { verifyCCTPConfiguration } = require('./dist/contracts/addresses'); const result = verifyCCTPConfiguration(); console.log('CCTP Address Validation:', result); process.exit(result.isValid ? 0 : 1);\"",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "prepublishOnly": "npm run build",
    "pack:test": "npm pack --dry-run"
  },
  "keywords": [
    "circle",
    "cctp",
    "paymaster",
    "cross-chain",
    "gas",
    "usdc",
    "defi",
    "sdk"
  ],
  "author": "GasFlow Team",
  "license": "MIT",
  "dependencies": {
    "@circle-fin/circle-sdk": "^2.9.0",
    "@circle-fin/modular-wallets-core": "^1.0.11",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "node-fetch": "^3.3.2",
    "viem": "^2.21.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^11.1.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typechain": "^8.3.2",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IronicDeGawd/CircleDorahacksGroup1-GasFlowSDK.git"
  },
  "bugs": {
    "url": "https://github.com/IronicDeGawd/CircleDorahacksGroup1-GasFlowSDK/issues"
  },
  "homepage": "https://gasflow-sdk.vercel.app"
}
